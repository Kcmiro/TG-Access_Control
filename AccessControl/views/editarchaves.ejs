<%- include('./partials/header.ejs') %> <%- include('./partials/sidebar.ejs') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card para o formulário de edição -->
      <div class="card shadow-lg">
        <div class="card-header bg-dark text-white text-center">
          <h3>Editar Chave: <%= chave.chave_id %></h3>
        </div>
        <div class="card-body">
          <!-- Formulário de edição -->
          <form
            method="post"
            action="/chaves/editarchaves/<%= chave.chave_id %>"
          >
            <div class="form-group mb-3">
              <label for="chave_nome" class="form-label">Chave:</label>
              <input
                type="text"
                class="form-control"
                id="chave_nome"
                name="chave_nome"
                value="<%= chave.chave_nome %>"
                required
              />
            </div>
            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-success">Atualizar</button>
              <a href="/chaves/listarchaves/" class="btn btn-secondary"
                >Cancelar</a
              >
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/rodape.ejs') %>
