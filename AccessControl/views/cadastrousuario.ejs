<%- include('./partials/header.ejs') %>
<div class="container">
  <div class="card position-absolute top-50 start-50 translate-middle col-10">
    <div class="card-header bg-primary text-white font-weight-bold">
      CADASTRO DE USUARIO
    </div>
    <div class="card-body">
      <form method="post" action="/usuario/novousuario">
        <div class="form-floating mb-3">
          <input
            type="text"
            name="nome"
            class="form-control"
            id="nome"
            placeholder="Digite o nome de usuario"
          />
          <label for="nome">Digite o nome de usuario</label>
        </div>
        <div class="form-floating mb-3">
          <input
            type="password"
            name="senha"
            class="form-control"
            id="senha"
            placeholder="Digite a senha"
          />
          <label for="senha">Digite a senha</label>
        </div>
        <div class="form-floating mb-3">
          <label for="nivel">Nivel do usuario</label>
          <select id="nivel" name="nivel">
            <option value="OPERADOR">Operador</option>
            <option value="ADM">Administrador</option>
            <option value="CFTV">Monitoramento</option>
          </select>
        </div>
        <br />
        <div class="d-grid col-6 mx-auto">
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
        <% if( msg != '') { %>
        <div class="alert alert-danger" role="alert"><%= msg %></div>
        <% } %>
      </form>
    </div>
  </div>
</div>
<%- include('./partials/rodape.ejs') %>
