                <th>Status</th>
                <th>Placa</th>
                <th>Empresa</th>
                <th>Loja</th>
                <th>Ação</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                  <form method="post" action="" class="d-inline-block">
                    <button type="submit" class="btn btn-danger btn-sm">
                      Finalizar
                    </button>
                  </form>
                </td>
              </tr>
            </tbody>
          </table>
        </form>
      </div>
    </div>
  </div>
</div>

