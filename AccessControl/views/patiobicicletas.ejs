<%- include('./partials/header.ejs') %> <%- include('./partials/sidebar.ejs') %>

<div class="container-fluid">
  <div class="row min-vh-100">
    <div class="col-md-12 d-flex justify-content-center align-items-start pt-5">
      <div class="card rounded-4" style="width: 100%; max-width: 400px">
        <div
          class="card-header bg-dark text-white font-weight-bold text-center"
        >
          REGISTRAR BICICLETAS
        </div>
        <div class="card-body">
          <form method="POST" action="/patio/bike/<%= bicicletario.id %>">
            <div class="form-group mb-3">
              <label for="bike_nome">Nome</label>
              <input
                type="text"
                class="form-control"
                id="bike_nome"
                name="bike_nome"
                value="<%= bicicletario.bike_nome %>"
                required
                disabled
              />
            </div>
            <div class="form-group mb-3">
              <label for="bike_cor">Cor</label>
              <input
                type="text"
                class="form-control"
                id="bike_cor"
                name="bike_cor"
                value="<%= bicicletario.bike_cor %>"
                required
                disabled
              />
            </div>
            <div class="form-group mb-3">
              <label for="bike_loja">Loja</label>
              <input
                type="text"
                class="form-control"
                id="bike_loja"
                name="bike_loja"
                value="<%= bicicletario.bike_loja %>"
                required
                disabled
              />
            </div>
            <div class="form-group mb-3">
              <label for="telefone">Telefone</label>
              <input
                type="text"
                class="form-control"
                id="telefone"
                name="telefone"
                value="<%= bicicletario.telefone.telefone %>"
                required
                maxlength="15"
                disabled
              />
            </div>
            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-danger">Registrar</button>
              <a
                href="/bicicletario/bicicletascadastro"
                class="btn btn-secondary"
                >Cancelar</a
              >
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/rodape.ejs') %>
